<%= form_with scope: :course, url: new_course_path, local: true,
              class: "border rounded p-4" do |f| %>
  <div class="form-group">
    <%= f.label :name, t(".label_name"), class: "label-required" %>
    <%= f.text_field :name, class: "form-control", required: true,
                      placeholder: t(".label_name")%>
  </div>
  <div class="form-group">
    <%= f.label :note, t(".label_note") %>
    <%= f.text_area :note, class: "form-control", required: true,
                         placeholder: t(".label_note") %>
  </div>
  <div class="form-group">
    <div class="wrap-topic">
      <div class="selection-topic">
        <%= f.label :topic, t(".label_topic"), class: "label-required" %>
          <%= select_tag :topic,
                         options_from_collection_for_select(@topic, :id, :name),
                         data: {
                             remote: true,
                             url: course_topic_path
                         },
                         prompt: t(".label_select_topic"),
                         class: "form-control"
          %>
      </div>
      <div id="wrap-list-topic">

      </div>
    </div>
  </div>
  <%= f.submit t(".label_submit"), class: "btn btn-primary btn-lg btn-block",
               data: {"disable-with": t(".label_saving")}%>
<% end %>
