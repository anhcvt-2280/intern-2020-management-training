<div class="container">
  <div class="row" id="login-side">
    <%= render "shared/users/left_side_intro"%>
    <div class="col-md-6">
      <div class="row d-flex align-items-center">
        <div class="mt-3 col-md-10">
          <div class="card d-flex align-self-center py-2">
            <div class="card-body">
              <h5 class="card-title font-weight-bold"><%= t ".reset_title" %></h5>
              <%= render "shared/users/error_messages", resource: resource %>
              <%= form_for resource, as: resource_name, url: user_password_path, html: {method: :post}, local: true, class: "rounded" do |f| %>
                <div class="form-group">
                  <%= f.email_field :email, class: "form-control", required: true,
                      placeholder: t("sessions.new.label_email"), autofocus: true, autocomplete: "email" %>
                </div>
                <%= f.submit t("sessions.new.label_submit"), class: "btn btn-primary btn-sm" %>
                <%- if controller_name != "sessions" %>
                  <%= link_to t(".back_login"), new_session_path(resource_name), class: "btn btn-primary btn-sm" %><br />
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
