<div class="container">
  <div class="row" id="login-side">
    <%= render "shared/users/left_side_intro" %>
    <div class="col-md-6">
      <div class="row d-flex align-items-center">
        <div class="mt-3 col-md-10">
          <div class="card d-flex align-self-center py-2">
            <div class="card-body">
              <h5 class="card-title font-weight-bold"><%= t ".edit_reset_title" %></h5>
              <%= form_for resource, as: resource_name, url: password_path(resource_name),
                html: {method: :put}, class: "rounded" do |f| %>
                <%= f.hidden_field :reset_password_token %>
                <div class="form-group field">
                  <% if @minimum_password_length %>
                    <small class="form-text text-primary" id="passwordHelpBlock">
                      <%= @minimum_password_length %> <%= t ".minimum_length" %>
                    </small>
                  <% end %>
                  <%= f.password_field :password, placeholder: t(".password"), class: "form-control", required: true,
                    autofocus: true, autocomplete: "new-password", "aria-describedby": "passwordHelpBlock" %>
                  <small class="form-text text-danger">
                    <%= display_error f.object, :password, t(".label_password") %>
                  </small>
                </div>
                <div class="form-group field">
                  <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password",
                    placeholder: t(".password_confirmation") %>
                  <small class="form-text text-danger">
                    <%= display_error f.object, :password_confirmation, t(".label_password_confirm") %>
                  </small>
                </div>
                <div class="actions">
                  <%= f.submit t(".change_pwd"), class: "btn btn-primary btn-sm btn-block" %>
                  <%- if controller_name != "sessions" %>
                    <%= link_to t(".back_login"), new_session_path(resource_name),
                      class: "btn btn-primary btn-sm btn-block" %><br />
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%= toastr_flash %>
