<div class="content-title d-flex justify-content-between">
  <div class="title text-bold h4"> <%= icon "fas", "key" %>
    <%= t ".title" %>
  </div>
</div>

<%= form_for resource, as: resource_name, url: registration_path(resource_name),
             html: { method: :put, class: "p-4 mt-3" } do |f| %>
  <div class="row justify-content-center">
    <div class="col-6">
      <div class="form-group">
        <%= f.label :password, class: "font-weight-bold"%>
        <%= f.password_field :password,
                             class: "form-control", placeholder: t(".label_password") %>
        <% if @minimum_password_length %>
          <small><i><%= @minimum_password_length %> <%= t ".notice_length_pwd" %></i></small>
        <% end %>
        <%= display_error resource, :password, t(".label_password") %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, class: "font-weight-bold" %><br />
        <%= f.password_field :password_confirmation,
                             class: "form-control", placeholder: t(".label_password_confirmation") %>
        <%= display_error resource, :password_confirmation, t(".label_password_confirmation") %>
      </div>

      <div class="form-group">
        <%= f.label :current_password, class: "font-weight-bold" %>
        <%= f.password_field :current_password,
                             class: "form-control", placeholder: t(".label_current_password")%>
        <small><i><%= t".notice_current_pwd" %></i></small>
        <%= display_error resource, :current_password, t(".label_current_password") %>
      </div>

      <%= f.submit t(".label_update"), class: "btn btn-primary mb-2" %>
    </div>
  </div>
<% end %>
