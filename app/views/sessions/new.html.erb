<div class="container">
  <div class="col-md-6 offset-md-3">
    <div class="card mt-3">
      <div class="card-header text-center">
        <%= link_to root_path, class: "navbar-brand col-xl-2 text-center" do %>
          <%= image_tag Settings.app.logo, class: "d-inline-block align-top sun-logo" %>
          <span><%= t ".training" %></span>
        <% end %>
      </div>
      <div class="card-body">
        <%= form_with scope: :session, url: login_path, local: true,
              class: "rounded p-4" do |f| %>
          <div class="form-group">
            <%= f.label :email, t(".label_email") %>
            <%= f.email_field :email, class: "form-control", required: true,
                      placeholder: t(".label_email")%>
          </div>
          <div class="form-group">
            <%= f.label :password, t(".label_password") %>
            <%= f.password_field :password, class: "form-control", required: true,
                         placeholder: t(".label_password") %>
          </div>
          <div class="form-group form-check">
            <%= f.check_box :remember, class: "form-check-input" %>
            <%= f.label :remember, t(".label_remember") %>
          </div>
          <%= f.submit t(".label_submit"), class: "btn btn-primary btn-lg btn-block" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
