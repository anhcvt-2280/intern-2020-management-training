<li class="media border-bottom mt-3 pt-3 col-md-6">
  <input type="checkbox" class="select-subject mr-3" data-id="<%= item.id %>">
  <%= hidden_field_tag "course[course_subjects_attributes][#{item.id}][subject_id]" %>
  <%= hidden_field_tag "course[course_subjects_attributes][#{item.id}][priority]",
                       nil, class: "subject-priority"%>
  <% if item.image.present? %>
    <%= image_tag item.image.url, class: "align-self-center mr-3 w-25 rounded img-thumbnail" %>
  <% end %>
  <div class="media-body">
    <h5 class="mt-0"><%= item.name %></h5>
    <p><%= item.note %></p>
  </div>
</li>
